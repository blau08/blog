{{yield}}
<div class="container">
  <h1>New Post</h1>
  <form class="form-group">

      <label for="title">Title</label>
      {{input class="form-control" value=title id="title"}}

      <label for="date">Date</label>
      {{input class="form-control" value=date id="date"}}

      <label for="author">Author</label>
      {{input class="form-control" value=author id="author"}}

      <label for="description">Description</label>
      {{input class="form-control" value=description id="description"}}

      <label for="content">Content</label>
      {{textarea rows="6" class="form-control" value=content id="content"}}

      <label for="image">Image URL</label>
      {{input class="form-control" value=image id="image"}}
      <br>

    <button class="btn btn-success" {{action 'save'}}>Save</button>
  </form>
</div>
