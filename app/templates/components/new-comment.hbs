{{yield}}
{{#if addNewComment}}
<h1>New Comment</h1>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="response">Response</label>
      {{input value=response id="response"}}
    </div>

    <button {{action 'saveComment' post}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'showCommentForm'}}>New Comment</button>
{{/if}}
